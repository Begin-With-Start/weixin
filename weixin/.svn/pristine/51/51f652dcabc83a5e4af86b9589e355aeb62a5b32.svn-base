@charset "utf-8";
/* CSS Document */

.campus-main{padding:16px;}
.campus-wrap{border-radius:3px; background-color:#fff; padding:16px;}
.input-bottom { border-bottom:0px solid #ebebeb;}
.input-group { position:relative; margin-top:10px;}
.campus-main select {-webkit-appearance: none;width: 100%;height: 41px;-webkit-border-radius: 0;border: solid 1px #D5D5D5;border-top-color: #BDBDBD;border-width: 1px;color: #333333; font-size: 14px;padding-right: 16px; background: #ffffff; text-indent: 9px; margin-bottom: 10px;}
.campus-main .campus-select:after {content: "";top: 14px;right: 12px;position: absolute;display: inline-block;font-size: 0;border-top: 2px solid #666666;border-left: 2px solid #666666;width: 6px;height: 6px;background-color: transparent; -webkit-transform: rotate(225deg);}
.m-bottomPanel a:link { display:block; cursor:pointer; color:#fff; font-weight:600;}
.m-bottomPanel a:visited { display:block; cursor:pointer; color:#fff; font-weight:600;}
.m-bottomPanel a:hover { display:block; cursor:pointer; color:#fff; font-weight:600;}

/*学校详情*/
.mycampus-pic {  border:none; margin:0 auto; padding:0; text-align:center}
.mycampus-pic img { width:100%; height:auto;}
.mycampus-main{padding:16px; margin:0 auto;}
.mycampus-wrap { padding:16px; background-color:#fff;}
.memberpic img { width:2.6em; height:2.6em; margin-right:10px;}
.mycampus-summary { padding:16px 0; text-indent:2em;}

/*留言评论*/
.m-box {padding: 16px 16px 30px 16px; margin: 15px; background-color: #fff;border-radius: 2px;}
.course-messagetext { padding:16px 0 5px 0;}
.course-messagetext textarea {width: 100%; box-sizing: border-box;  color: #333; font-size: 14px; border: 1px #ddd solid; border-top-color: #BBB;  padding-left: 9px; height: 100px;-webkit-appearance: none; -webkit-tap-highlight-color: transparent; outline: 0; -webkit-border-radius: 0; border-radius: 3px; padding-top: 9px;}